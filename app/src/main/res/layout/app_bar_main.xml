<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fcf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <com.example.perfectlin.starappstore.Activity.Adapter.CoverFlow
        android:id="@+id/activity_main_coverflow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        fcf:maxRotation="100"
        fcf:scaleDownGravity="0.1"
        fcf:unselectedAlpha="0.3"
        fcf:unselectedSaturation="0.0"
        fcf:unselectedScale="30">

    </com.example.perfectlin.starappstore.Activity.Adapter.CoverFlow>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="12"
        app:cardCornerRadius="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_main_appname"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="星忆"
                android:textSize="25sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/activity_main_appdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us星空学生创新中心www.xingkong.us"
                    android:textSize="20sp" />
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/activity_main_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/green"
        android:text="下载" />
</LinearLayout>
